{
  "name": "bayfrontmedia/bones-api",
  "description": "A starter kit to begin building an API using the Bones framework",
  "homepage": "https://github.com/bayfrontmedia/bones-api",
  "license" : "MIT",
  "type": "project",
  "keywords": [
    "bones",
    "bones-api",
    "api",
    "rbac",
    "authentication",
    "authorization"
  ],
  "authors": [
    {
      "name": "John Robinson",
      "email": "john@bayfrontmedia.com",
      "homepage": "https://www.bayfrontmedia.com"
    }
  ],
  "support": {
    "issues": "https://github.com/bayfrontmedia/bones-api/issues"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "bayfrontmedia/bones": "^5.3",
    "bayfrontmedia/bones-service-api": "^1.0",
    "bayfrontmedia/bones-service-orm": "^1.0",
    "bayfrontmedia/bones-service-rbac": "^1.0",
    "bayfrontmedia/leaky-bucket": "^2.2",
    "bayfrontmedia/monolog-pdo": "^1.1.",
    "bayfrontmedia/multi-logger": "^1.2",
    "bayfrontmedia/php-http-response": "^2.0",
    "bayfrontmedia/php-string-helpers": "^2.2",
    "bayfrontmedia/php-validator": "^4.0"
  },
  "require-dev": {
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  }
}
